<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Select Course"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/subjectContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Example for Subject 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_numerical"
                    android:contentDescription="Numerical Course" />

                    <CheckBox
                        android:id="@+id/subject1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numerical (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Repeat for other subjects -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_database"
                    android:contentDescription="Data System Course" />

                    <CheckBox
                        android:id="@+id/subject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data System (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_algorithm"
                    android:contentDescription="Algorithm Course" />

                    <CheckBox
                        android:id="@+id/subject3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Algorithm (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_android"
                    android:contentDescription="Wireless and Mobile Programming Course" />

                    <CheckBox
                        android:id="@+id/subject4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wireless and Mobile Programming (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_software"
                    android:contentDescription="Software Engineering Course" />

                    <CheckBox
                        android:id="@+id/subject5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Engineering (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_3danimasi"
                    android:contentDescription="3D Animation Course" />

                    <CheckBox
                        android:id="@+id/subject6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3D Animation (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ai"
                    android:contentDescription="Network Security Course" />

                    <CheckBox
                        android:id="@+id/subject7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Security (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ai2"
                    android:contentDescription="Artificial Intelligence Course" />

                    <CheckBox
                        android:id="@+id/subject8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artificial Intelligence (4 Credits)"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/enrollButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enroll"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
